#!/bin/bash
# TODO(jistr): get rid of this script when we use supervisor >= 3.0

if [ ! -e /var/lib/mysql/mysql ]; then
    /usr/bin/mysql_install_db
fi

/usr/bin/mysqld_safe &
sleep 2
PID=`cat /var/run/mysqld/mysqld.pid`

trap 'kill -SIGQUIT $PID; wait' INT
trap 'kill -SIGQUIT $PID; wait' TERM
wait
